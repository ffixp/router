
connect.ffixp.net {
    # A response for anyone peaking around this endpoint
    respond / "Hello travler! ;)" 404

    # We just need to serve static content generated by other soures
    file_server /* {
        root /var/www/connect_ffixp_net
    }

    # We want to allow all FFIXP domains to access this endpoint
    header Access-Control-Allow-Origin "*.ffixp.net"
}